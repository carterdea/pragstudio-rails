= form_for(@movie) do |f|
  = f.label :title
  = f.text_field :title, autofocus: true
  %br
  = f.label :description
  = f.text_area :description, cols: 40, rows: 7
  %br
  = f.label :director
  = f.text_field :director
  %br
  = f.label :cast
  = f.text_field :cast
  %br
  = f.label :image_file_name
  = f.text_field :image_file_name
  %br
  = f.label :rating
  = f.text_field :rating
  %br
  = f.label :total_gross
  = f.number_field :total_gross
  %br
  = f.label :duration
  = f.text_field :duration
  %br
  = f.label :released_on
  = f.datetime_select :released_on
  %br
  = f.submit
  = link_to "Cancel", movies_path

%article
  %header
    %h2= @movie.title
  %p= @movie.description
  %table
    %tr
      %th Released:
      %td= "#{@movie.released_on.to_s(:default)} (#{time_ago_in_words(@movie.released_on)} ago)"
    %tr
      %th Rating:
      %td= @movie.rating
    %tr
      %th Total Gross:
      %td= format_total_gross(@movie)
=link_to "All Movies", root_path

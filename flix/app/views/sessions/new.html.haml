%h1 Sign In
= form_tag(session_path) do
  = label_tag :email, "Email or Username"
  = text_field_tag :email, nil, autofocus: true, size: 40, required: true
  = label_tag :password
  = password_field_tag :password, nil, size: 40, required: true
  = submit_tag "Sign In"
%p Don't have an account? #{link_to "Sign Up!", signup_path}
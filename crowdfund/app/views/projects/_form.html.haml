= form_for(@project) do |f|
  = render 'shared/errors', object: @project
  = f.label :name
  = f.text_field :name, autofocus: true
  = f.label :description
  = f.text_area :description, cols: 40, rows: 7
  = f.label :website
  = f.text_field :website
  = f.label :team_members
  = f.text_field :team_members
  = f.label :image_file_name
  = f.text_field :image_file_name
  = f.label :target_pledge_amount
  = f.number_field :target_pledge_amount
  = f.label :pledging_ends_on
  = f.date_field :pledging_ends_on
  = f.submit
  = link_to "Cancel", projects_path

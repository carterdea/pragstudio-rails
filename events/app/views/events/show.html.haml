%article
  %header
    =image_for(@event)
    %h2= @event.name
    %h3= @event.capacity
  %p= @event.description
  %table
    %tr
      %th When:
      %td= @event.starts_at
    %tr
      %th Where:
      %td= @event.location
    %tr
      %th Price:
      %td= format_price(@event)

= link_to "Edit", edit_event_path(@event)
|
= link_to "Delete", event_path(@event), method: :delete, data: {confirm: 'Are you sure?'}
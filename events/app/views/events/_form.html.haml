= form_for(@event) do |f|
  = render 'shared/errors'
  = f.label :name
  = f.text_field :name, autofocus: true
  = f.label :description
  = f.text_area :description, cols: 40, rows: 7
  = f.label :location
  = f.text_field :location
  = f.label :price
  = f.number_field :price
  = f.label :starts_at
  = f.datetime_select :starts_at
  = f.label :image_file_name
  = f.text_field :image_file_name, size: 30, placeholder: "GIF, JPG, or PNG file name"
  = f.label :capacity
  = f.number_field :capacity
  = f.submit
  = link_to "Cancel", events_path
